class Game {
  - bot1: Bots
  - bot2: Bots  
  - bet1: Bet777
  - bet2: Bet777
  - roulette: Ruller
  - flag: int
  - indicator: int
  - ifwin: bool
  - gain: int
  + __init__()
  + full_money(): int
  + apply_strategy_to_bot(bot_number: int): int
  + play_round(bot_number: int)
  + check_win(bot_number: int, roulette_result: Tuple)
  + play_game(max_rounds: int)
  + declare_winner()
